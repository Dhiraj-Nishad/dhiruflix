<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile - DhiruFlix</title>
    <link rel="stylesheet" href="/css/profile.css" />
  </head>
  <body>
    <!-- Header -->
    <header>
      <h1>DhiruFlix Admin</h1>
      <div class="profile-icon">
        <img onclick="toggleBox()"
          src="https://cdn-icons-png.flaticon.com/512/8847/8847137.png"
          alt="Profile"
        />
        <!-- <h1><a href="/logout">Logout</a></h1> -->
      </div>
      <!-- <div class="addmovie"><a href="/addmovie">Add Movie</a></div> -->
      <div id="box"><a href="/admin/profile/editprofile">Edit Profile </a><a href="">Change Password</a><a href="/logout">Logout</a>
    </header>

    <!-- Main Content -->
    <main>
<div class="addmovie" style="display: flex; justify-content: center; text-align: center;">
  <% if (typeof username !== "undefined") { %>
    <h1 class="error-message">Admin <%= username %></h1>
    <% } %> <a
    href="/admin/addmovies"
    style="
      color: white;
      text-decoration: none;
      padding: 10px;
      margin: 10px;
      background-color: rgba(0, 0, 0, 0.349);
      border-radius: 15%;
      box-shadow: 2px 1px 1px 2px rgba(255, 255, 255, 0.295);
      height: 20px;
    "
    >Add Movie</a
  >
</div>
    </main>
    <div class="allmovies">
      <div class="box">
        <ul>
          <% movies.forEach(movie => { %>
            <li>
              <img src="<%= movie.movieImage %>" alt="<%= movie.movieName %>" width="200" />
              <h3><%= movie.movieName %></h3> 
              <div class="links">
                <a href="/admin/editmovie/<%= movie._id %>">Edit</a>
              <a href="/admin/deletemovie/<%= movie._id %>">Delete </a>
              </div>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </body>

  <script>

function toggleBox() {
        const box = document.getElementById("box");
        if (box.style.display === "none" || box.style.display === "") {
          box.style.display = "block";
        } else {
          box.style.display = "none";
        }    }
  </script>
</html>
