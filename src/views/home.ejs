<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home - DhiruFlix</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/home.css" />
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #121212;
        color: white;
        margin: 0;
        padding: 0;
      }

      header {
        background-color: #000;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      header h1 {
        color: #e50914;
        margin: 0;
      }

      header nav a {
        color: white;
        text-decoration: none;
        margin-left: 20px;
        font-weight: bold;
      }

      header nav a.signup {
        background-color: #e50914;
        padding: 10px 20px;
        border-radius: 5px;
      }

      header nav a:hover {
        text-decoration: underline;
      }

      main {
        text-align: center;
        padding: 50px 20px;
      }

      main h1 {
        font-size: 36px;
        margin-bottom: 10px;
      }

      main p {
        font-size: 18px;
        color: #b3b3b3;
      }

      footer {
        background-color: #000;
        color: white;
        padding: 0px 20px 5px 20px;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
        justify-content: center;
        text-align: center;
        flex-direction: column;
      }
      footer .footer1 {
        display: flex;
        margin: 0 auto;
      }

      footer .footer1 div {
        border-right: 1px solid white;
      }
      footer p {
        color: #b3b3b3;
        margin: 0 auto;
      }

      footer div {
        flex: 1;
        margin: 10px;
      }

      footer h3 {
        color: #e50914;
        margin-bottom: 10px;
      }

      footer a {
        color: white;
        text-decoration: none;
        display: block;
        margin-bottom: 5px;
      }

      footer a:hover {
        text-decoration: underline;
      }

      footer p {
        color: #b3b3b3;
      }

      footer hr {
        border: 0;
        border-top: 1px solid #333;
        margin: 20px 0;
      }

      footer .copyright {
        text-align: center;
        color: #b3b3b3;
        margin-top: 10px;
      }
    </style>
  </head>
  <body>
    <!-- Header -->
    <header>
      <h1>DhiruFlix</h1>
      <nav>
        <a href="/login">Login</a>
        <a href="/signup" class="signup">Sign Up</a>
      </nav>
    </header>

    <!-- Main Content -->
    <main>
      <!-- <h1>Welcome to DhiruFlix</h1>
      <p>Your ultimate destination for movies and entertainment</p> -->
      <div class="allmovies">
        <div class="box">
          <ul>
            <% movies.forEach(movie => { %>
            <a href="/watch/<%= movie._id %>">
              <li>
                <img
                  src="<%= movie.movieImage %>"
                  alt="<%= movie.movieName %>"
                  width="200"
                />
                <h3><%= movie.movieName %></h3>
                <!-- <div class="links">
                    <a href="/admin/editmovie/<%= movie._id %>">Edit</a>
                  <a href="/admin/deletemovie/<%= movie._id %>">Delete </a>
                  </div> -->
              </li>
            </a>
            <% }) %>
          </ul>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer>
      <!-- <div class="footer1">
        <div>
          <h3>DhiruFlix</h3>
          <p>Your ultimate destination for movies and entertainment.</p>
        </div>
        <div>
          <h3>Quick Links</h3>
          <a href="#">About Us</a>
          <a href="#">Contact</a>
          <a href="#">Terms of Service</a>
          <a href="#">Privacy Policy</a>
        </div>
        <div>
          <h3>Connect With Us</h3>
          <a href="#">Facebook</a>
          <a href="#">Twitter</a>
          <a href="#">Instagram</a>
        </div>
      </div> -->
      <hr />
      <p class="copyright">&copy; 2025 DhiruFlix. All rights reserved.</p>
    </footer>
  </body>
</html>
